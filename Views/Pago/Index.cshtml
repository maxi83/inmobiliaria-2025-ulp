@model IEnumerable<InmobiliariaUlP_2025.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h2>Pagos del contrato</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<p>
    <a class="btn btn-primary"
       asp-action="Crear"
       asp-route-contratoId="@ViewBag.Contrato.Id">
        Nuevo pago
    </a>

    <a class="btn btn-secondary ms-2"
       asp-controller="Contrato"
       asp-action="Index">
        Volver a contratos
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>NÂ° Pago</th>
            <th>Fecha</th>
            <th>Importe</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.NoPago</td>
                <td>@p.FechaPago</td>
                <td>$ @p.Importe</td>
                <td>
                    @* ðŸ”’ SOLO ADMIN VE EL BOTÃ“N *@
                    @if (User.IsInRole("Administrador"))
                    {
                        <a class="btn btn-danger btn-sm"
                           asp-action="Eliminar"
                           asp-route-id="@p.Id">
                            Eliminar
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
