@model IEnumerable<InmobiliariaUlP_2025.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
    var contrato = ViewBag.Contrato;
}

<h2>Pagos del contrato</h2>

<a class="btn btn-primary mb-3"
   asp-action="Crear"
   asp-route-contratoId="@contrato.Id">
    Nuevo Pago
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>NÂ° Pago</th>
            <th>Fecha</th>
            <th>Importe</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.NoPago</td>
                <td>@p.FechaPago</td>
                <td>$ @p.Importe</td>
                <td>
                    <a class="btn btn-danger btn-sm"
                       asp-action="Eliminar"
                       asp-route-id="@p.Id">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
