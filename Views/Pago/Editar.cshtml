@model InmobiliariaUlP_2025.Models.Pago

<h2>Editar Pago</h2>

<form asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ContratoId" />

    <div class="mb-3">
        <label asp-for="FechaPago"></label>
        <input asp-for="FechaPago" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Importe"></label>
        <input asp-for="Importe" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="PorContrato"
       asp-route-id="@Model.ContratoId"
       class="btn btn-secondary">Cancelar</a>

</form>