@model IEnumerable<InmobiliariaUlP_2025.Models.Contrato>
@if (TempData["Multa"] != null)
{
    <div class="alert alert-warning">
        Multa por rescisión: $@TempData["Multa"]
    </div>
}

@{
    ViewData["Title"] = "Contratos";
    bool desdeInmueble = ViewBag.DesdeInmueble ?? false;
}

<h1>Contratos</h1>

@if (!desdeInmueble)
{
    <div class="mb-3">
        <a asp-action="Crear" class="btn btn-primary">Nuevo Contrato</a>
    </div>
}

<table class="table table-dark table-striped align-middle">
    <thead>
        <tr>
            <th>N° Contrato</th>
            <th>Inmueble</th>
            <th>Inquilino</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Monto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var c in Model)
{
        <tr>
            <td>@c.Id</td>
            <td>@c.Inmueble?.Direccion</td>
            <td>@c.Inquilino?.Apellido, @c.Inquilino?.Nombre</td>
            <td>@c.FechaInicio</td>
            <td>@c.FechaFin</td>
            <td>$ @c.MontoMensual</td>
            <td>
                <div class="d-flex gap-1">
                    @if (!desdeInmueble)
                    {
                        <a asp-action="Editar" asp-route-id="@c.Id" class="btn btn-secondary btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        <a asp-action="Terminar" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Rescindir</a>
                    }
                    <a asp-controller="Pago"
                       asp-action="PorContrato"
                       asp-route-id="@c.Id"
                       class="btn btn-info btn-sm">
                        Pagos
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
