@model InmobiliariaUlP_2025.Models.Contrato

<h2>Terminar Contrato</h2>

<p>
    <strong>Inicio:</strong> @Model.FechaInicio.ToString("dd/MM/yyyy") <br />
    <strong>Fin actual:</strong> @Model.FechaFin.ToString("dd/MM/yyyy")
</p>

<form asp-action="Terminar" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Nueva fecha de fin</label>
        <input type="date" name="nuevaFechaFin" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-danger">Terminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
