@model InmobiliariaUlP_2025.Models.Contrato

@{
    ViewData["Title"] = "Eliminar contrato";
}

<h1>Eliminar contrato</h1>

<div class="alert alert-danger">
    ¿Estás seguro que querés eliminar este contrato?
</div>

<ul class="list-group mb-3">
    <li class="list-group-item">
        <strong>N° Contrato:</strong> @Model.NumeroContrato
    </li>
    <li class="list-group-item">
        <strong>Inquilino:</strong> @Model.Inquilino?.Apellido @Model.Inquilino?.Nombre
    </li>
    <li class="list-group-item">
        <strong>Inmueble:</strong> @Model.Inmueble?.Direccion
    </li>
    <li class="list-group-item">
        <strong>Fecha Inicio:</strong> @Model.FechaInicio
    </li>
    <li class="list-group-item">
        <strong>Fecha Fin:</strong> @Model.FechaFin
    </li>
</ul>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        Eliminar definitivamente
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Cancelar
    </a>
</form>
