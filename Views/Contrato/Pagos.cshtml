@model IEnumerable<InmobiliariaUlP_2025.Models.Pago>

@{
    ViewData["Title"] = "Pagos del contrato";
}

<h2>Pagos del contrato</h2>

<a class="btn btn-primary mb-3"
   asp-controller="Pago"
   asp-action="Crear"
   asp-route-contratoId="@ViewBag.Contrato.Id"
   asp-route-inmuebleId="@ViewBag.InmuebleId"
   asp-route-desdeInmueble="@ViewBag.DesdeInmueble">
    Nuevo pago
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>NÂ° Pago</th>
            <th>Fecha</th>
            <th>Importe</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.NoPago</td>
                <td>@p.FechaPago</td>
                <td>$ @p.Importe</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.DesdeInmueble == true)
{
    <a asp-controller="Contrato"
       asp-action="PorInmueble"
       asp-route-id="@ViewBag.InmuebleId"
       class="btn btn-secondary">
        Volver
    </a>
}
else
{
    <a asp-controller="Contrato"
       asp-action="Index"
       class="btn btn-secondary">
        Volver
    </a>
}