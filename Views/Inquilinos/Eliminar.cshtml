@model InmobiliariaUlP_2025.Models.Inquilino

@{
    ViewData["Title"] = "Eliminar inquilino";
}

<h1>Eliminar inquilino</h1>

<p>¿Estás seguro que querés eliminar este inquilino?</p>

<ul>
    <li><strong>DNI:</strong> @Model.Dni</li>
    <li><strong>Apellido:</strong> @Model.Apellido</li>
    <li><strong>Nombre:</strong> @Model.Nombre</li>
</ul>

<form method="post" asp-action="Eliminar">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Eliminar definitivamente</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
