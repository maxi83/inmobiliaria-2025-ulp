@model List<InmobiliariaUlP_2025.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de inmuebles";
}

<h1>Inmuebles</h1>

<a class="btn btn-success mb-3" href="/Inmuebles/Crear">Crear inmueble</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Direcci√≥n</th>
            <th>Propietario</th>
            <th>Uso</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Disponibilidad</th>
            <th style="width:180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Direccion</td>
                <td>@i.Propietario?.Apellido @i.Propietario?.Nombre</td>
                <td>@i.Uso</td>
                <td>@i.Tipo</td>
                <td>@i.NoAmbientes</td>
                <td>$ @i.Precio</td>
                <td>@i.Disponibilidad</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Inmuebles/Editar/@i.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" href="/Inmuebles/Eliminar/@i.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
