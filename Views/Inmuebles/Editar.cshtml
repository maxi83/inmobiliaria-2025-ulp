@model InmobiliariaUlP_2025.Models.Inmueble

@{
    ViewData["Title"] = "Editar inmueble";
}

<h1>Editar inmueble</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Propietario</label>
        <select class="form-select" asp-for="PropietarioId">
            @foreach (var p in ViewBag.Propietarios)
            {
                <option value="@p.Id" selected="@(p.Id == Model.PropietarioId)">
                    @p.Apellido @p.Nombre
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Uso"></label>
        <select asp-for="Uso" class="form-select"
                asp-items="Html.GetEnumSelectList<Uso>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-select"
                asp-items="Html.GetEnumSelectList<Tipo>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="NoAmbientes"></label>
        <input asp-for="NoAmbientes" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="Latitud"></label>
        <input asp-for="Latitud" class="form-control" type="number" step="any" />
    </div>

    <div class="mb-3">
        <label asp-for="Longitud"></label>
        <input asp-for="Longitud" class="form-control" type="number" step="any" />
    </div>
    <div class="mb-3">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <div class="mb-3">
    <label asp-for="Disponibilidad"></label>

        @if (Model.Disponibilidad == Disponibilidad.OCUPADO)
        {
            <input asp-for="Disponibilidad" type="hidden" />
            <input class="form-control" value="OCUPADO" readonly />
        }
        else
        {
            <select asp-for="Disponibilidad" class="form-select">
                <option value="DESOCUPADO">DESOCUPADO</option>
                <option value="SUSPENDIDO">SUSPENDIDO</option>
            </select>
        }
    </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a href="/Inmuebles" class="btn btn-secondary">Volver</a>
</form>
