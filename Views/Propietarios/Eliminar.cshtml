@model Propietario

@{
    ViewData["Title"] = "Eliminar Propietario";
}

<h1>Eliminar Propietario</h1>

<h3>¿Está seguro que desea eliminar este propietario?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.Dni</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
    </dl>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar definitivamente" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
