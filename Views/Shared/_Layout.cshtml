<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Inmobiliaria San Luis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">

<header>
    <nav class="navbar navbar-dark bg-dark border-bottom px-4">
        <a class="navbar-brand" asp-controller="Propietarios" asp-action="Index">
            Inmobiliaria San Luis
        </a>


        <ul class="navbar-nav flex-row gap-4">
            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Contrato" asp-action="Index">Contratos</a>
            </li>
        </ul>

        <div class="d-flex align-items-center gap-3">
            <span class="text-secondary">@User.Identity?.Name</span>
            <a class="btn btn-outline-light btn-sm"
               asp-controller="Login"
               asp-action="Logout">
                Salir
            </a>
        </div>
    </nav>
</header>

<main class="container py-4">
    @RenderBody()
</main>

<footer class="text-center text-secondary py-3 border-top">
    Universidad ULP · Desarrollado por Maximiliano Ángel Gatica · 2026
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
